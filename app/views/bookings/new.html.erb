<h1>Flight #<%= @flight.id %> (<%= @flight.departing_airport.code %>-<%= @flight.arriving_airport.code %>) departing <%=@flight.departure.strftime('%B, %d, %Y at %H:%M') %>
</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
<%= form_for @booking do |f| %>
  <%= f.hidden_field :flight_id, :value => @flight.id %>
	

  <%= f.fields_for :passengers do |p| %>
    <p><%= p.label :name, "Passenger Name" %>
    	<%= p.text_field :name  %>
    	<%= p.label :email, "Contact Email" %>
    <%= p.text_field :email %></p>
  <% end %>

  <%= f.submit "Confirm Details", class: "btn btn-danger" %>

<% end %>
  </div>
</div>
